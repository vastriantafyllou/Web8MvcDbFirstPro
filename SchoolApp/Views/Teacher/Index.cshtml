@{
    ViewData["Title"] = "Teacher Dashboard";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0">Teacher Dashboard</h1>
        <div class="text-muted">Welcome back, @User?.Identity!.Name!</div>
    </div>

    <!-- Teacher Stats -->
    <div class="row mb-4">
        <div class="col-md-3 mb-4">
            <div class="card bg-primary text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <div class="h6 font-weight-bold">My Courses</div>
                            <div class="h4 font-weight-bold">6</div>
                        </div>
                        <i class="fas fa-book fa-2x opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-4">
            <div class="card bg-success text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <div class="h6 font-weight-bold">Total Students</div>
                            <div class="h4 font-weight-bold">142</div>
                        </div>
                        <i class="fas fa-user-graduate fa-2x opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-4">
            <div class="card bg-info text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <div class="h6 font-weight-bold">Pending Grading</div>
                            <div class="h4 font-weight-bold">23</div>
                        </div>
                        <i class="fas fa-clipboard-check fa-2x opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-4">
            <div class="card bg-warning text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <div class="h6 font-weight-bold">Today's Classes</div>
                            <div class="h4 font-weight-bold">3</div>
                        </div>
                        <i class="fas fa-clock fa-2x opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- Today's Schedule -->
        <div class="col-lg-6 mb-4">
            <div class="card shadow">
                <div class="card-header bg-white">
                    <h6 class="m-0 font-weight-bold">Today's Schedule</h6>
                </div>
                <div class="card-body">
                    <div class="list-group list-group-flush">
                        <div class="list-group-item d-flex justify-content-between align-items-center">
                            <div>
                                <strong>Mathematics 101</strong>
                                <div class="text-muted small">9:00 AM - 10:30 AM</div>
                            </div>
                            <span class="badge bg-primary">Room 201</span>
                        </div>
                        <div class="list-group-item d-flex justify-content-between align-items-center">
                            <div>
                                <strong>Physics Lab</strong>
                                <div class="text-muted small">11:00 AM - 12:30 PM</div>
                            </div>
                            <span class="badge bg-success">Lab B</span>
                        </div>
                        <div class="list-group-item d-flex justify-content-between align-items-center">
                            <div>
                                <strong>Advanced Calculus</strong>
                                <div class="text-muted small">2:00 PM - 3:30 PM</div>
                            </div>
                            <span class="badge bg-info">Room 305</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Quick Actions -->
        <div class="col-lg-6 mb-4">
            <div class="card shadow">
                <div class="card-header bg-white">
                    <h6 class="m-0 font-weight-bold">Quick Actions</h6>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a href="@Url.Action("Index", "MyCourses")" class="btn btn-outline-primary text-start">
                            <i class="fas fa-book me-2"></i>My Courses
                        </a>
                        <a href="@Url.Action("Create", "Assignment")" class="btn btn-outline-success text-start">
                            <i class="fas fa-tasks me-2"></i>Create Assignment
                        </a>
                        <a href="@Url.Action("Index", "Gradebook")" class="btn btn-outline-info text-start">
                            <i class="fas fa-graduation-cap me-2"></i>Gradebook
                        </a>
                        <a href="@Url.Action("Index", "Attendance")" class="btn btn-outline-warning text-start">
                            <i class="fas fa-clipboard-list me-2"></i>Take Attendance
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">